{
  "version": 2,
  "scope": "danetheory",
  "alias": [
    "danetheory-design-system.now.sh",
    "design-system.danetheory.com"
  ],
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": false
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/next"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/static/favicon.ico"
    },
    {
      "src": "/(.*)$",
      "dest": "/index?slug=$1"
    }
  ]
}
